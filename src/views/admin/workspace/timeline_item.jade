img(src="static/images/demo/layout_images.jpg")
ul
  for animation, i in animations
    - var offset = 2*i + animation.start * 0.08
    - var dur    = 2 + animation.duration * 0.08
    - var dataAnimation = JSON.stringify(animation)
    li(
      style='left: ' + offset + 'px; width: ' + dur + 'px', 
      data-animation=dataAnimation
    )