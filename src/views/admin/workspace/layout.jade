      li.workspace-left_panel-top_list-add
        button.bind-add
        ul.workspace-left_panel-top_list-add_list
          li
            ul
              li.workspace-left_panel-top_list-add_list_header
                h2 Объекты
              li.workspace-left_panel-top_list-add_list_text.bind-text-btn
                button Текст
              li.workspace-left_panel-top_list-add_list_paragraph.bind-paragraph-btn
                button Параграф
              li.workspace-left_panel-top_list-add_list_graph.bind-graph-btn
                button Графика
              li.workspace-left_panel-top_list-add_list_video.bind-video-btn
                button Видео
              li.workspace-left_panel-top_list-add_list_figures.bind-figures-btn
                button Фигура
              li
          li
            ul 
              li.workspace-left_panel-top_list-add_list_header
                h2 Виджеты
              li.workspace-left_panel-top_list-add_list_news.bind-news-btn
                button Новости
              li.workspace-left_panel-top_list-add_list_time.bind-time-btn
                button Время
              li.workspace-left_panel-top_list-add_list_weather.bind-weather-btn
                button Погода
              li.workspace-left_panel-top_list-add_list_date.bind-date-btn
                button Дата

      //- Запускает список слайдов 01_03_workspace_slides
      li.workspace-left_panel-top_list-show
