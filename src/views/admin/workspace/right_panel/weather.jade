          input(type="text")
          span px
        .width50_percent.ver
          input(type="text")
          span px

    .workspace-right_panel-container-input_block
      input.search.bind-text(type="text", value=name, placeholder="Населенный пункт")
    .floatleft.width100
      .workspace-right_panel-container-file 
        .half2
          .workspace-right_panel-container-checkbox_block
            input(type="checkbox", name="weather", id = "header")
            label(for="header")
            label.margintop_5(for="header") Заголовок
        .half2
          .workspace-right_panel-container-checkbox_block
            input(type="checkbox", name="weather", id = "photo")
            label(for="photo")
            label.margintop_5(for="photo") Фото
        .half2
          .workspace-right_panel-container-checkbox_block
            input(type="checkbox", name="weather", id = "text")
            label(for="text")
            label.margintop_5(for="text") Текст
        .half2
          .workspace-right_panel-container-checkbox_block
            input(type="checkbox", name="weather", id = "date")
            label(for="date")
            label.margintop_5(for="date") Дата

    .workspace-right_panel-container_big
      h3 Позиция
      .workspace-right_panel-container-position
      
        if position == "1"
          input(type="radio", name="position", id = "1", checked="checked")
        else
          input(type="radio", name="position", id = "1")
        label.item1(for="1")

        if position == "2"
          input(type="radio", name="position", id = "2", checked="checked")
        else
          input(type="radio", name="position", id = "2")
        label.item2(for="2")

        if position == "3"
          input(type="radio", name="position", id = "3", checked="checked")
        else
          input(type="radio", name="position", id = "3")
        label.item3(for="3")

        if position == "4"
          input(type="radio", name="position", id = "4", checked="checked")
        else
          input(type="radio", name="position", id = "4")
        label.item4(for="4")

      .floatleft.width100.margintop10
        .workspace-right_panel-container-size_block
          .width50_percent.position
            label X
            input(type="text")
            span px
          .width50_percent.position.y
            label Y
            input(type="text")
            span px


      .workspace-right_panel-container-rotate.margintop10
        .zindex.width50_percent
          label Z-index
          input(type="text")



