.workspace-right_panel-project 
  .workspace-right_panel-header
    h2 Проект
    buttom.workspace-right_panel-settings
  form.workspace-right_panel-container.mcsb-behavior.pd-submit-behavior
    .workspace-right_panel-container-input_block
      label Название проекта
      input.bind(type="text", value=name, bind-to="name")
    .workspace-right_panel-container_big
      h3 Формат
      .workspace-right_panel-container-radio_format
        .row_line

          if dim == "4x3"
            input.bind(type="radio", name="format", id = "4x3", value="4x3", checked, bind-to="dim")
          else
            input.bind(type="radio", name="format", id = "4x3", value="4x3", bind-to="dim")
          label.item_1(for="4x3")
            span 4:3

          if dim == "3x4"
            input.bind(type="radio", name="format", id = "3x4", value="3x4", checked, bind-to="dim")
          else
            input.bind(type="radio", name="format", id = "3x4", value="3x4", bind-to="dim")
          label.item_2(for="3x4")
            span 3:4
        
        .row_line   

          if dim == "16x9"
            input.bind(type="radio", name="format", id = "16x9", value="16x9", checked, bind-to="dim")
          else
            input.bind(type="radio", name="format", id = "16x9", value="16x9", bind-to="dim")
          label.item_3(for="16x9")
            span 16:9 

          if dim == "9x16"  
            input.bind(type="radio", name="format", id = "9x16", value="9x16", checked, bind-to="dim")
          else
            input.bind(type="radio", name="format", id = "9x16", value="9x16", bind-to="dim")
          label.item_4(for="9x16")
            span 9:16   

    .workspace-right_panel-container_big
      h3 Звук
      .workspace-right_panel-container-checkbox_block
        if disableSound
          input.bind(type="checkbox", name="disableSound", id = "disableSound", bind-to="disableSound", checked)
        else
          input.bind(type="checkbox", name="disableSound", id = "disableSound", bind-to="disableSound")
        label.margintop_7(for="disableSound")
        label(for="disableSound") 
          | Не воспроизводить звук из 
          br
          | вставленных видео      
    .workspace-right_panel-container_big
      h3 Повтор
      .workspace-right_panel-container-radio_block
        if repeat == 'no-repeat'
          input.bind(type="radio", bind-to="repeat", name="repeat", id = "no-repeat", checked, value="no-repeat")
        else
          input.bind(type="radio", bind-to="repeat", name="repeat", id = "no-repeat", value="no-repeat")
        label(for="no-repeat")
        label(for="no-repeat") Не повторять

      .workspace-right_panel-container-radio_block
        if repeat == 'cycle'
          input.bind(type="radio", bind-to="repeat", name="repeat", id = "cycle", checked, value="cycle")
        else
          input.bind(type="radio", bind-to="repeat", name="repeat", id = "cycle", value="cycle")
        label(for="cycle")
        label(for="cycle") Повторять циклично

      .workspace-right_panel-container-radio_block
        .half
          if repeat == 'repeat'
            input.bind(type="radio", bind-to="repeat", name="repeat", id = "repeat", checked, value="repeat")
          else
            input.bind(type="radio", bind-to="repeat", name="repeat", id = "repeat", value="repeat")
          label(for="repeat")
          label(for="repeat") Повторить
        .half
          //- этому инпуту дай класс disabled и атрибут disabled
          if repeat == 'repeat'
            input.width50.margintop_-5.bind(type="text", name="repeatNum", bind-to="repeatNum", parse-int, value=repeatNum)
          else
            input.width50.margintop_-5.disabled(type="text", disabled)
