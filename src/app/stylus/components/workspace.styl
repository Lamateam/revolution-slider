.workspace
  &-top_panel
    &-folder
      background url(images/header/header_triangle.svg) no-repeat center 
      width 81px
      height 100%
      float left
      box-shadow inset 1px 0px 0px 0px rgba(23,27,32,0.50)
      
    &-main
      float left
      margin-left 20px
      height 100%
      
      span
        opacity 0.2
        font-size 13px
        color #FFFFFF
        clear left
        display block

    &-name
      opacity 0.5
      font-size 18px
      color #FFFFFF
      display block
      padding-top 11px
      line-height 21px
      

    &-buttons
      float right
      padding-left 0px
      margin-bottom 0px
      height 100%
      
      & li
        float left
        height 100%
        box-shadow inset 1px 0px 0px 0px rgba(23,27,32,0.50)
        transition 300ms all ease-in
        
        &:hover
          opacity 0.8
        
        & button
          width 100%
          height 100%
          
        &.disabled
          opacity 0.3
          &:hover
            opacity 0.3  

          
      &-redo
      &-undo
        width 46px 
        
      &-redo
        box-shadow none!important
        background url("images/header/rotate_right.svg") no-repeat 9px center
       
      &-undo 
        background url("images/header/rotate_left.svg") no-repeat 21px center

      &-download
      &-preview
        width 60px
        background url(images/header/download.svg) no-repeat center
        
      &-saved
        width 100px
        background url("images/header/save.svg") no-repeat center 15px
        
        button
          padding-top 25px
          opacity 0.5
          font-size 12px
          color #FFFFFF
          
      &-preview
        background url(images/header/eye.svg) no-repeat center
        

          
  &-center_panel
    position absolute
    top 125px
    left 120px
    right 335px
    bottom 0px
    
    &-settings
      width 100%
      overflow hidden
      padding-bottom 20px

      &-number
        opacity 0.3
        font-size 14px
        color #FFFFFF

      &-name
        padding-left 6px
        opacity 0.5
        font-size 14px
        color #FFFFFF

      h1
        display block
        float left
        padding 0px
        margin 0px
        line-height 20px
        
      button
        float right
        width 20px
        height 20px
        background url(images/centerpart/settings.svg) no-repeat center
        transition 200ms all ease-in
        
        &:hover
          opacity 0.7

    svg
      background white


          

        
