.workspace
  &-top_panel
    &-folder
      background url(images/header/header_triangle.svg) no-repeat center 
      width 81px
      height 100%
      float left
      box-shadow inset 1px 0px 0px 0px rgba(23,27,32,0.50)
      
    &-main
      float left
      margin-left 20px
      height 100%
      
      span
        opacity 0.2
        font-size 13px
        color #FFFFFF
        clear left
        display block

    &-name
      opacity 0.5
      font-size 18px
      color #FFFFFF
      display block
      padding-top 11px
      line-height 21px
      

    &-buttons
      float right
      padding-left 0px
      margin-bottom 0px
      height 100%
      
      & li
        float left
        height 100%
        box-shadow inset 1px 0px 0px 0px rgba(23,27,32,0.50)
        transition 300ms all ease-in
        
        &:hover
          opacity 0.8
        
        & button
          width 100%
          height 100%
          
      &-redo
      &-undo
        width 46px 
        
      &-redo
        box-shadow none!important
        background url("images/header/rotate_right.svg") no-repeat 8px center
       
      &-undo 
        background url("images/header/rotate_left.svg") no-repeat 22px center


      &-download
      &-preview
        width 60px
        background url(images/header/download.svg) no-repeat center
        
      &-saved
        width 100px
        background url("images/header/save.svg") no-repeat center 15px
        
        button
          padding-top 25px
          opacity 0.5
          font-size 12px
          color #FFFFFF
          
      &-preview
        background url(images/header/eye.svg) no-repeat center