.workspace
  &-right_panel
    top 60px
    bottom 0px
    right 0px
    position absolute
    background-image linear-gradient(-90deg, #303C45 52%, #36414A 100%)
    box-shadow 2px 0px 14px 0px rgba(0,0,0,0.20)
    width 280px
    padding-left 15px
    padding-right 15px
    
    &-slydes
      h2
        background url(images/rightpart/slydes/slydes.svg) no-repeat 8px center
        

    &-header
      margin-left -15px
      margin-right -15px
      height 30px
      background-color rgba(77,87,93,0.40)
      box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
      
      h2
        line-height 34px
        height 30px
        padding 0px
        padding-left 32px
        margin 0px
        font-size 13px
        display block
        float left
        color color_white
    
    &-settings
      background url(images/rightpart/settings.svg) no-repeat center
      width 14px
      height 14px
      display block
      float right
      margin-right 8px
      margin-top 8px
      cursor pointer
      transition 200ms all ease-in
      
      &:hover
      &:active
        opacity 0.7
