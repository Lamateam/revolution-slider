.workspace
  &-right_panel
    height 100%
    padding-top 60px
    overflow hidden
    right 0px
    position absolute
    background-image linear-gradient(-90deg, #303C45 52%, #36414A 100%)
    box-shadow 2px 0px 14px 0px rgba(0,0,0,0.20)
    width 280px

    .mCSB_outside + .mCSB_scrollTools
      top 100px
      right 0
      
    .mCSB_scrollTools_vertical
      z-index 15
      
    &_add
      width 100%
      border 2px dashed rgba(40,46,51,0.60)
      box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
      border-radius 4px
      HEIGHT 50px
      width 100%
      margin-top 15px
      transition 300ms all ease-in
      background url(images/rightpart/add.svg) no-repeat center
      
      &.file
        background url(images/rightpart/file/cloud.svg) no-repeat center
       
      &:hover
        opacity 0.7
        

    &-header
      height 30px
      position fixed
      background-color #3b474f
      width 100%
      z-index 10
      box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
      
      h2
        line-height 32px
        height 30px
        padding 0px
        padding-left 32px
        margin 0px
        font-size 13px
        display block
        float left
        color color_white

    &-slydes
      h2
        background url(images/rightpart/slydes/slydes.svg) no-repeat 8px center
        
    &-weather
      h2
        background url(images/rightpart/project_header/weather.svg) no-repeat 8px center
        line-height 32px


    &-project
      h2
        background url(images/rightpart/project_header/project.svg) no-repeat 8px center   

    &-text
      h2
        background url(images/rightpart/project_header/text.svg) no-repeat 10px center 

    &-paragraph
      h2
        background url(images/rightpart/project_header/paragraph.svg) no-repeat 8px center

    &-time
      h2
        background url(images/rightpart/project_header/time.svg) no-repeat 8px center

    &-graphics
      h2
        background url(images/rightpart/project_header/graphics.svg) no-repeat 8px center

    &-video
      h2
        background url(images/rightpart/project_header/video.svg) no-repeat 8px center

    &-shape
      h2
        background url(images/rightpart/project_header/figure.svg) no-repeat 5px center

    &-date
      h2
        line-height 34px
        background url(images/rightpart/project_header/date.svg) no-repeat 8px center
    
    &-settings
      background url(images/rightpart/settings.svg) no-repeat center
      width 14px
      height 14px
      display block
      float right
      margin-right 8px
      margin-top 8px
      cursor pointer
      transition 200ms all ease-in
      
      &:hover
      &:active
        opacity 0.7
        
    &-container
      padding-bottom 30px
      height 100%
      padding-left 15px
      padding-right 15px
      width 100%
      padding-top 25px
      position relative
      height calc(100% - 60px)
    

      &_big
        margin-top 22px
        overflow hidden
        
        & h3
          color color_white
          width 100%
          display block
          font-size 13px
          text-transform uppercase
          padding-bottom 6px
          border-bottom 2px solid #292E33

      input[type="radio"]
      input[type="checkbox"]
        display none
        
      input[type="radio"] + label
      input[type="checkbox"] + label
        width 18px
        float left
        margin-right 7px
        cursor pointer
        margin-top 0px
        margin-bottom 0px
        height 18px
        background url(images/rightpart/radio.svg) no-repeat center 
        
        & + label
          font-size 13px
          color color_white
          cursor pointer
          line-height 18px

      input[type="checkbox"] + label
        width 28px
        height 28px
        background url(images/rightpart/checkbox/checkbox.svg) no-repeat center 
                
      input[type="radio"]:checked + label
      input[type="checkbox"]:checked + label        
        background url(images/rightpart/radio_active.svg) no-repeat center 
        
        & + label
          color rgba(255,255,255,0.90)
          
      input[type="checkbox"]:checked + label
        background url(images/rightpart/checkbox/checkbox_active.svg) no-repeat center   
        
      & input
      & select
      & textarea
        font-family Arial, sans-serif
        font-size 14px
        padding-left 9px
        padding-right 9px
        color color_white_70
        height 34px
        line-height 34px
        vertical-align middle
        border none
        outline none
        background #4F5963
        box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
        border-radius 3px
        transition 150ms all ease-in
        
        &:-moz-placeholder
          color color_white_70
          font-family Arial, sans-serif
          font-size 14px

        &::-moz-placeholder
          color color_white_70
          font-family Arial, sans-serif
          font-size 14px

        &::-webkit-input-placeholder
          color color_white_70
          font-family Arial, sans-serif
          font-size 14px

        &:-ms-input-placeholder
          color color_white_70
          font-family Arial, sans-serif
          font-size 14px


        
        &:focus
        &:active
          background-color #6b747d
          

        &.text-center
          text-align center
        
      & textarea
        height 85px
        resize none

      & input

        &.time
          background-image url(images/rightpart/slydes/time.svg)
          background-repeat no-repeat
          background-position 8px center
          padding-left 29px 
          
        &.search
          background-image url(images/load_images/loop.svg)
          background-repeat no-repeat
          background-position 8px center
          padding-left 29px 
      

      & select
        
        & option
          height 34px
          font-size 12px
          color color_white
          
          &:hover
            background #4F5963

      &-rotate
        padding-top 8px        



      &-select_block
      &-radio_block
      &-checkbox_block
      &-color_picker
      &-position
      &-shape
      &-rotate
      &-size_block
      &-input_block
      &-time 
      &-file 
        padding-top 8px
        
        &.fourth
          width 60px
          
          & select
            text-align center
            
        &.lineheight
          width 103px
          padding-top 0px
          margin-top 8px
          background url("images/rightpart/size_text.svg") 9px center no-repeat
          
          & select
            width 60px
            float right
                  
        & label
        & span
          font-family GothaProReg, sans-serif
          margin-top 3px
          margin-bottom 4px
          color color_white
          font-size 13px

        & input
        & select
        & textarea
          overflow visible
          width 100%
 
      &-input_block
        
        & span.radius
          line-height 34px
          

        &.with_eye
          & input
            background-image url("images/rightpart/slydes/eye.svg")
            background-repeat no-repeat
            background-position 222px center
        
        &.biu
          overflow hidden
          margin-top 8px
          border none
          outline none
          background-color #4F5963
          box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
          border-radius 3px
          width 103px
          height 34px
          padding 0px
          
          & button
            transition 300ms all ease-in
            width 33%
            height 100%
            background-position center
            
            &:hover
              background-color #6b747d
            
            &.bold
              background-image url("images/rightpart/type_text/bold.svg")
            &.italic
              background-image url("images/rightpart/type_text/italic.svg")
            &.underline
              background-image url("images/rightpart/type_text/underline.svg")      

      &_row
        
        &_time
          padding-top 10px
          overflow hidden
          
          
          & span
            float left
            opacity 0.45
            font-size 12px
            color #FFFFFF
            padding-left 24px
            background url(images/rightpart/time00.00.svg) no-repeat left center
            
          & button
            float right
            width 15px
            height 15px
            transition 300ms all ease-in
            background url(images/rightpart/settings.svg) no-repeat center
            
            &:hover
              opacity 0.7

      &-block
        & select
          width 142px
          float left

        &_plus
          width 90px
          float right
          position relative
          
          &.radius
            float right!important
            margin-left 0px
            width 80px
            padding-left 7px
            
            & span
              font-family GothaProReg, sans-serif
              color color_white
              font-size 13px
              line-height 34px
              


          & input
            width 100%
            
          & button
            &.plus
            &.minus
              position absolute
              z-index 2
              background-color #78818a
              box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
              border-radius 2px
              width 15px
              border 1px solid rgba(79,89,99,0.30)
              height 15px
              right 2px
              
            &.plus
              background-image url(images/rightpart/slydes/plus.svg)
              background-repeat no-repeat
              background-position center 
              top 2px           
            &.minus
              background-image url(images/rightpart/slydes/minus.svg)
              background-repeat no-repeat
              background-position center
              top 17px  
                    
      &-radio_block
        padding-top 14px 
        
        & + &
          padding-top 10px
        
        & input[type=text]
          float left
          
          &.disabled
          &:disabled
          &[disabled="disabled"]
            opacity 0.5
            
            & + span
              opacity 0.5
          
          & + span
            float left
            margin-top 3px
            color color_white
            margin-left 10px 
            
      &-radio_format
        
        & .row_line
          margin-top 10px
          position relative
          overflow hidden

          & label
            float left!important
            transition 200ms all ease-in
            
            &.item_1
              background #4F5963 url(images/rightpart/format/4.3.svg)  center 13px no-repeat
              
              &:hover
                  background #cdcdcd url(images/rightpart/format/4.3_active.svg)  center 13px no-repeat             

            &.item_2
              background #4F5963 url(images/rightpart/format/3.4.svg) center 11px no-repeat
              
              &:hover
                  background #cdcdcd url(images/rightpart/format/3.4_active.svg)  center 11px no-repeat    
                  
            &.item_3
              background #4F5963 url(images/rightpart/format/16.9.svg) center 18px no-repeat
              
              &:hover
                  background #cdcdcd url(images/rightpart/format/16.9_active.svg) center 18px no-repeat    
                  
            &.item_4
              background #4F5963 url(images/rightpart/format/9.16.svg)  center 10px no-repeat
              
              &:hover
                  background #cdcdcd url(images/rightpart/format/9.16_active.svg)  center 10px no-repeat    
          
            
            & span
              opacity 0.59
              text-align center
              font-size 13px
              width 100%
              margin-top 58px
              display block              
              color #CDCDCD
              transition 200ms all ease-in
              
            &:hover
              
              & span
                color #4F5963
                opacity 1
            
            &:last-child
              float right!important

        input[type="radio"]
          & + label
            background-color #4F5963
            box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
            border-radius 3px
            width 120px
            float inherit
            margin-right 0px
            height 80px
            
          
          &:checked + label
            background-color #cdcdcd
            box-shadow 0px 2px 4px 0px rgba(0,0,0,0.03)
            border-radius 3px
            
            & span
              color #4F5963
              opacity 1
              
            &.item_1
              background #cdcdcd url(images/rightpart/format/4.3_active.svg)  center 13px no-repeat             

            &.item_2
              background #cdcdcd url(images/rightpart/format/3.4_active.svg)  center 11px no-repeat    
                  
            &.item_3
              background #cdcdcd url(images/rightpart/format/16.9_active.svg) center 18px no-repeat    
                  
            &.item_4
              background #cdcdcd url(images/rightpart/format/9.16_active.svg)  center 10px no-repeat


      &-shape
        overflow hidden
        padding-top 14px

        & input[type="radio"]
          & + label
            width 82px
            height 52px
            float left
            margin-right 0px
            background-position center
            background-repeat no-repeat
            transition 150ms all ease-in
            background-color #4F5963
            box-shadow 0 2px 4px 0 rgba(0,0,0,0.03)

            & + input + label
              margin-left 1px
            
            &:hover
              background-color #cdcdcd
              box-shadow 0 2px 4px 0 rgba(0,0,0,0.03)            

            &.item1
              background-image url(images/rightpart/figure/1.svg)
              border-radius 6px 0px 0px 6px

              &:hover
                background-image url(images/rightpart/figure/1_active.svg)                

            &.item2
              background-image url(images/rightpart/figure/2.svg)

              &:hover
                background-image url(images/rightpart/figure/2_active.svg) 
            
            &.item3
              background-image url(images/rightpart/figure/3.svg)
              border-radius 0px 6px 6px 0px          

              &:hover
                background-image url(images/rightpart/figure/3_active.svg)   
                
          &:checked + label
            background-color #cdcdcd
            box-shadow 0 2px 4px 0 rgba(0,0,0,0.03)   
            
            &.item1
              background-image url(images/rightpart/figure/1_active.svg)
               

            &.item2
              background-image url(images/rightpart/figure/2_active.svg)

            
            &.item3
              background-image url(images/rightpart/figure/3_active.svg)          
          

      &-position
        & input[type="radio"]
          & + label
            width 25%
            height 40px
            float left
            margin-right 0px
            background-position center
            background-repeat no-repeat
            transition 150ms all ease-in
            

        
            &.item1
              background-image url(images/rightpart/position/1.svg)

              &:hover
                background-image url(images/rightpart/position/1_active.svg)                

            &.item2
              background-image url(images/rightpart/position/2.svg)

              &:hover
                background-image url(images/rightpart/position/2_active.svg) 
            
            &.item3
              background-image url(images/rightpart/position/3.svg)          

              &:hover
                background-image url(images/rightpart/position/3_active.svg)   

            &.item4
              background-image url(images/rightpart/position/4.svg) 

              &:hover
                background-image url(images/rightpart/position/4_active.svg) 
                
          &:checked + label
            
            &.item1
              background-image url(images/rightpart/position/1_active.svg)
               

            &.item2
              background-image url(images/rightpart/position/2_active.svg)

            
            &.item3
              background-image url(images/rightpart/position/3_active.svg)          
  

            &.item4
              background-image url(images/rightpart/position/4_active.svg) 

      &-rotate
        float left
        width 100%
        
        & .rotate
          float left        
          overflow hidden
          padding-right 38px
          background url("images/rightpart/rotate/rotate_right.svg") left center no-repeat, url("images/rightpart/rotate/deg.svg") 95px 9px no-repeat

          & input
            text-align center
            width 50px
            float right
        
          & + .zindex
            float right

        & .zindex
          overflow hidden
          float left

          label
            width 50%
            text-align center
            margin-top 0px
            margin-bottom 0px
            height 34px
            line-height 36px

          input
            width 50%
            float right
            text-align center
            
          &.pos
            
            label
              width 33%
              
            input
              width 66%
      &-size_block
        width 100%
        overflow hidden

        & .ver
        & .hor
        & .position
          float left
          padding-left 25px
          overflow hidden
          
          & input
            float left
            width 68px
            
          & span
          & label
            margin 0px
            margin-right 9px
            line-height 32px
            float right
            
        & .position
          padding-left 4px
          
          &.y
            padding-left 8px
            
            & label
              margin-right 9px
              
          & label
            line-height 36px
            margin 0px
            float left
            margin-right 13px
            

          & span
            line-height 34px
            
            
          
        & .ver
          background url("images/rightpart/size/ver.svg") 8px center no-repeat

        & .hor
          background url("images/rightpart/size/gor.svg") left center no-repeat          
      
      &-time
        & input
          width 70px
          
        & span
          margin 0px
          font-size 16px
          margin-left 15px
          line-height 34px
          
      &-file
        & .half1
        & .half2
          width 50%
          float left
          
        & .half1
          
          & .iframe_div
            width 75px
            position relative
            height 75px
            float left
            border-radius 15px
            overflow hidden

            & iframe
            & img
              width 100%
              height 100%

            
          & button
            float left
            position relative
            width 32px
            margin-left 5px
            height 32px
            transition 150ms all ease-in
          

            &:hover
              opacity 0.7

            &.edit
              background url(images/rightpart/file/edit.svg) no-repeat center

            &.delete
              margin-top 10px
              background url(images/rightpart/file/delete.svg) no-repeat center
            
        


            

              

                         


      
        

