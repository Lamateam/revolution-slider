.slides
  
  &_button
    position relative
    margin 18px auto
    width 200px
    text-align center
    vertical-align middle
    min-height 118px
    transition 200ms all ease-in
    background url(images/leftpart/slides/border.svg) center no-repeat
    
    &:hover
      opacity 0.6

    &_add
      height 36px
      width 36px
      display inline-block
      background url(images/leftpart/slides/plus.svg) center no-repeat
      
  &_item
    width 100%!important
    height auto!important
    box-shadow none!important
    
    
    &:hover
    &:active
    &:active
      box-shadow none!important
      background none!important

  &_list
    width 100%
    
    &_text
      width 200px
      margin 13px auto
      color color_white
      font-family GothaProLig
      
      & a
        color color_white
        font-family GothaProLig
        
        &:hover
        &:active
        &:focus
          opacity 1
      
      &_number
        padding-right 7px
      
      &_time
        display block
        float right
        clear left
        height 20px
        line-height 25px
        padding-left 19px
        width 60px
        font-size 14px
        margin-left 7px
        background url(images/leftpart/slides/time.svg) left center no-repeat
        
    
    &_images
      /* Rectangle 436: */
      box-shadow: 0px 1px 4px 0px rgba(0,0,0,0.10);
      border-radius: 3px;
      overflow hidden
      border: 1px solid rgba(255,255,255,0.06);
      border-radius: 5px;
      width 200px
      height auto
      position relative
      margin 0px auto
      
      & img
        position relative
        z-index 1

      & a
        z-index 2
        left 0px
        top 0px
        height 100%
        width 100%
        display block
        position absolute
      
      & button
        position absolute
        z-index 3
        right 7px
        top 7px
        overflow hidden
        display block
        width 32px!important
        height 32px!important
        background: rgba(26,35,42,0.50);
        border-radius: 2px;
        
        & span
          position absolute
          width 100%
          height 100%
          top 0px
          left 0px
          background url(images/leftpart/slides/gear.svg) center no-repeat
    
    & li
      width 100%!important
      height auto!important
      padding-top 15px
      padding-bottom 1px
      box-shadow none!important
      box-shadow inset -1px -1px 0 0 #283038 !important
      background transparent url(images/leftpart/slides/dots.svg) 8px 78px no-repeat
      
      &:hover
        background rgba(26,35,42,0.30) url(images/leftpart/slides/dots_active.svg) 8px 78px no-repeat
        box-shadow: inset 0px -1px 0px 0px rgba(0,0,0,0.20), inset 0px 1px 0px 0px rgba(0,0,0,0.20)!important