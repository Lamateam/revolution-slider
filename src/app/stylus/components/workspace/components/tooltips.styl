.tooltips
  position absolute
  z-index 150
  padding 15px
  border-radius 4px
  margin-left -75px
  width 230px
  font-size 12px
  background-color #111
  opacity 1
  color color_white
  background-image: linear-gradient(-90deg,#303c45 52%,#36414a 100%)
  box-shadow rgba(0, 0, 0, 0.3) 0 2px 10px
  filter: drop-shadow(rgba(0, 0, 0, 0.3) 0 2px 10px)
  opacity 0
  
  &.active
    opacity 1
  
  &_addon
    overflow hidden
    padding-top 5px
    
    &_row
      width 100%
      overflow hidden
      float left
      margin-top 10px
      
  &_input_block
    width 100%
    
    & label
      width 34%
      text-align center
      float left
      margin-bottom 0px
      line-height 30px
      
    & input
      float right
      width 64%

    
    &-third
      width 33.3%
      padding-right 1.33%
      padding-left 2%
      float left
      
      & label
        text-align center
      



      
  & input 
  & select
    font-family: Arial,sans-serif
    font-size 14px
    padding-left 9px
    padding-right 9px
    color rgba(255,255,255,0.69)
    height 30px
    line-height: 30px
    vertical-align: middle
    border: none
    outline: none
    background: #4f5963
    -moz-box-shadow: 0 2px 4px 0 rgba(0,0,0,0.03)
    -webkit-box-shadow: 0 2px 4px 0 rgba(0,0,0,0.03)
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.03)
    border-radius: 3px
    transition: 150ms all ease-in
    
    &:focus
    &:active
    &:hover
      background-color: #6b747d


  &::after
    border: 10px solid
    border-color: rgb(48,60,69) transparent transparent
    content: ""
    left 50%
    margin-left -10px
    position: absolute
    top 100%
    
  &_select 
    width 100%