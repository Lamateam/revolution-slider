@import '../variables.styl'

.sweet-alert button
  background color_blue!important
  box-shadow inset 0px -2px 0px 0px #2D66A7!important
  border-radius 4px
  font-size 18px
  color #FFFFFF
  outline none
  border none
  transition 300ms all ease-in  
  
  &:hover
  &:active
    opacity 0.7
    
&[data-has-cancel-button=false]
  
  & button
    box-shadow inherit!important
    
